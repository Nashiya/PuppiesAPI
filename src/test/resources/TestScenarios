  }


//Create a new post
PATCH http://localhost:8080/createPost/1002
Content-Type: application/json

{
  "postId": "103",
  "imageUrl": "C:\\Users\\moham\\IdeaProjects\\RedThreadComm\\src\\main\\resources\\Home.jpg",
  "text": "Third Post",
  "date": "2021-12-31",
  "likedUsers": []
}


//Fetch the post details.
GET http://localhost:8080/fetchPost/103

Output:
[
  {
    "postId": "103",
